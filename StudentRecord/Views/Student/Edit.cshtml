@model StudentRecord.Models.AddStudentViewModel

<!--It is the Cshtml page for the  edit-->
<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label for="Subscribed">Subscribed</label>
        <input type="checkbox" id="Subscribed" name="Subscribed" @if (Model.subscribed)
        {
            <text>checked</text>
        } />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
